{
  "$id": "customDefinitions",
  "definitions": {
    "dateTime": {
      "type": "string",
      "examples": ["2021-01-01T00:00:00Z", "2022-01-01T00:00:00.9282Z"],
      "pattern": "^(20[1|2][0-9])-(0?[1-9]|1[0-2])-(0?[1-9]|[12][0-9]|3[01])T(00|0[0-9]|1[0-9]|2[0-3]):([0-9]|[0-5][0-9]):([0-9]|[0-5][0-9])(\\.\\d+)?[zZ]$"
    },
    "fiatObject": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "string",
          "pattern": "[0-9]+(\\.[0-9]+)?"
        },
        "currency": {
          "type": "string",
          "enum": ["aed", "bhd", "usd", "omr", "kwd", "sar", "try"]
        }
      },
      "required": ["amount", "currency"]
    },
    "atpCryptoObject": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "string",
          "pattern": "[0-9]+(\\.[0-9]+)?"
        },
        "currency": {
          "type": "string",
          "enum": ["btc", "eth", "ltc", "xrp"]
        }
      },
      "required": ["amount", "currency"]
    }
  }
}
