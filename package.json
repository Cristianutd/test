{
  "name": "cypressAutomation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cy:run": "cypress run --spec \"cypress/integration/${PRODUCTION_TYPE:-**}/**\"",
    "cy:open": "cypress open",
    "cy:regression": "./node_modules/.bin/cypress-tags run -e TAGS='@regression',allure=true --browser chrome --headless",
    "cy:api-tests": "./node_modules/.bin/cypress-tags run -e TAGS='@api-tests',allure=true --browser chrome --headless",
    "cy:api-tests-health-check": "./node_modules/.bin/cypress-tags run -e TAGS='@health-check',allure=true --browser chrome --headless",
    "cy:api-tests-power-plants": "./node_modules/.bin/cypress-tags run -e TAGS='@power-plants',allure=true --browser chrome --headless",
    "cy:api-tests-schemas": "./node_modules/.bin/cypress-tags run -e TAGS='@validate-schemas',allure=true --browser chrome --headless",
    "cy:ui-tests": "./node_modules/.bin/cypress-tags run -e TAGS='@ui-tests',allure=true --browser chrome --headless",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open",
    "allure:clear": "rm -r allure-results/ allure-report cypress/screenshots || true",
    "allure:history": "mv -f allure-report/history allure-results/history && rm -r allure-report || true",
    "allure:version": "allure --version"
  },
  "author": "CristianArandia",
  "license": "ISC",
  "dependencies": {
    "@shelex/cypress-allure-plugin": "^2.26.5",
    "cucumber": "^7.0.0-rc.0",
    "cypress": "9.7.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "lint": "^0.7.0",
    "mocha": "^9.1.1",
    "mocha-gherkin": "^0.2.0",
    "prettier": "^2.4.0"
  },
  "devDependencies": {
    "@bahmutov/cypress-extends": "^1.1.0",
    "cypress-grep": "^2.13.1",
    "cypress-mochawesome-reporter": "^2.3.0",
    "cypress-xpath": "^1.6.2",
    "format-unicorn": "^1.1.1",
    "fs-extra": "^10.0.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "commonPath": "cypress/integration/Steps/"
  },
  "env": {
    "allureResultsPath": "reports/allure-results"
  }
}
